@model Web.ViewModels.RegisterViewModel
@{
    // ViewBag.Title = Resources.Account.RegisterTitle;
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";

}
<link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Sigmar+One' rel='stylesheet' type='text/css'>
@*<h2>@ViewBag.Title.</h2>*@

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*<h4>@Resources.Account.RegisterCreateNewAccount</h4>*@
    <h1 id="titleheader">artsy.</h1>
   
    <div class="form-group">
       @* @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", id = "emailfield" })
        </div>
    </div>
    <div class="form-group">
    @*    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", id = "passwordfield" })
        </div>
    </div>
    <div class="form-group">
      @*  @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", placeholder = "Password", id = "passwordfield" })*@
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Password", id = "passwordfield" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default btnregister" value="@Resources.Account.RegisterButtonRegister"/>
        </div>

    </div>
    @Html.ValidationSummary("", new { @class = "text-danger pull-center" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}