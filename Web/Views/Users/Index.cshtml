@model Web.ViewModels.UserIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().AboutMe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Users) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AboutMe)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserId })
        </td>
    </tr>
}

</table>
